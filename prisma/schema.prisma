generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Tab {
  url        String
  title      String
  id         String   @id @default(cuid())
  user_id    String   
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  session_id String
  session    Session  @relation(fields: [user_id], references: [session_id])

  @@index([user_id])
}

model Session {
  session_id   String   @id @default(cuid())
  session_name String
  user_id      String
  tabs         Tab[]
  notes        Note[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([user_id])
}

model Note {
  id         String   @id @default(cuid())
  user_id    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  content    String
  session_id String
  session    Session  @relation(fields: [user_id], references: [session_id])

  @@index([user_id])
}
